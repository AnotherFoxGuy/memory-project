<Window x:Class="MemoryProject.MainGameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Name The Game" Height="450" Width="800">
    <Grid>
        <Label Name="Score1"  Content="Score: 0" />
        <Button Content="New Game" HorizontalAlignment="Right" Margin="10,5" VerticalAlignment="Top" Width="100" Height="30" 
                Click="RestartGame" AutomationProperties.AutomationId="RestartGame" />
		<UniformGrid x:Name="LiveGameGrid" Margin="50,50,50,20"/>
    </Grid>
</Window>