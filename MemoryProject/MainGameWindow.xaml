<Window x:Class="MemoryProject.MainGameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Name The Game" Height="450" Width="800">
    <Grid>
        <Label Name="Player1Name" Content="Player1" Width="150" Height="30" Margin="128,0,514,389" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Label Name="Player2Name" Content="Player2" Width="150" Height="30" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,250,0"/>
        <Label Name="Score1"  Content="Score: 0" />
        <Button Content="New Game" HorizontalAlignment="Right" Margin="230,5" VerticalAlignment="Top" Width="100" Height="30" 
                Click="RestartGame" AutomationProperties.AutomationId="RestartGame" />
        <Button Content="Save Game" HorizontalAlignment="Right" Margin="120,5" VerticalAlignment="Top" Width="100" Height="30" 
                Click="SaveGame" AutomationProperties.AutomationId="SaveGame" />
        <Button Content="Load Game" HorizontalAlignment="Right" Margin="10,5" VerticalAlignment="Top" Width="100" Height="30" 
                Click="LoadGame" AutomationProperties.AutomationId="LoadGame" />
		<UniformGrid x:Name="LiveGameGrid" Margin="50,50,50,20"/>

    </Grid>
</Window>